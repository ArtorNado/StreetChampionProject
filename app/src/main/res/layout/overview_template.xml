<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_character"
        app:layout_constraintBottom_toTopOf="@+id/v_position"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/varela_round"
        android:text="character"
        android:textColor="@color/colorPurpleDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/v_position"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_character"
        app:layout_constraintStart_toStartOf="@id/tv_character_name"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorPink" />

    <TextView
        android:id="@+id/tv_character_name"
        app:layout_constraintBottom_toTopOf="@+id/v_position"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/varela_round"
        android:text="Club character"
        android:textColor="@color/colorPurpleDark"
        android:textSize="20sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
